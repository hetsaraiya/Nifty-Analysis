# ============================================================================
# Nifty Analysis - Docker Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values

# Application Settings
# ====================
SECRET_KEY=your-super-secret-key-change-this-in-production-12345
FLASK_DEBUG=false
CACHE_TIMEOUT=300
LOG_LEVEL=INFO

# Server Configuration
# ===================
HOST=0.0.0.0
PORT=8000

# Docker-specific settings
# ========================
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# OPTIONAL: TOTP Secret for automatic TOTP generation
# If not provided, you'll need to enter TOTP manually from your authenticator app
# How to get: Angel One Mobile App → Settings → Two Factor Authentication
ANGEL_ONE_TOTP_SECRET=your-totp-secret

# Network Configuration
# ====================
CLIENT_LOCAL_IP=127.0.0.1
CLIENT_PUBLIC_IP=your-public-ip
MAC_ADDRESS=your-mac-address

# Performance Settings
# ===================
CACHE_TIMEOUT=300
REQUEST_TIMEOUT=15
AUTO_REFRESH_INTERVAL=30

# Analysis Settings
# ================
RISK_FREE_RATE=0.065
DIVIDEND_YIELD=0.0
MAX_STRIKES_IN_CHART=21
GREEKS_CALCULATION_RANGE=2

# Security Settings
# ================
SESSION_TIMEOUT=3600
REQUIRE_ALL_CREDENTIALS=True

# Logging
# =======
LOG_LEVEL=INFO